@using Dev.EasyPonto.Extensions
@model Dev.EasyPonto.ViewModels.FuncionarioViewModel

@{
    ViewBag.Title = "Detalhes do Funcionario";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Informação somente leitura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" ">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10" ">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2" ">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class="col-sm-10" ">
            @this.FormatarDocumento(Model.TipoFuncionario, Model.Documento)
        </dd>
        <dt class="col-sm-2" ">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10" ">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>

    <div>
        <a href="@Url.Action("Edit", "Funcionarios", new {id = Model.Id})" class="btn btn-primary">Editar</a>
        <a href="@Url.Action("Index", "Funcionarios")" class="btn btn-info">Voltar</a>
    </div>
</div>

@Html.Partial("_DetalhesEndereco")


