@using Dev.EasyPonto.Extensions
@model IEnumerable<Dev.EasyPonto.ViewModels.FuncionarioViewModel>

@{
    ViewBag.Title = "Lista de Funcionarios";
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-info" href="@Url.Action("Create", "Funcionarios")">Novo Funcionario</a>

</p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
            
            
                    <td>
                        @this.FormatarDocumento(item.TipoFuncionario, item.Documento)
                    </td>
            
            
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
            
                    <td class="text-right">
                        <a class="btn btn-info" href="@Url.Action("Details","Funcionarios", new {id = item.Id})"><span class="glyphicon glyphicon-search"></span></a>
                        <a class="btn btn-warning" href="@Url.Action("Edit","Funcionarios", new {id = item.Id})"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a class="btn btn-danger" href="@Url.Action("Delete","Funcionarios", new {id = item.Id})"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
            </tr>
        }



    </tbody>



</table>

